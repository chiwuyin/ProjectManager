import json

# 原始字典
data = {
    "company": {
        "name": "Acme Technologies"
    },
    "products": [
        {"id": "P001", "name": "CloudSync"},
        {"id": "P002", "name": "DataMiner"}
    ]
}

# 第一步：将 dict 转为标准 JSON 字符串
json_str = json.dumps(data, ensure_ascii=False)

# 第二步：用双引号包裹整个字符串，并转义内部的双引号
escaped_json_str = json_str.replace('"', '\\"')
episode_body = f'"{escaped_json_str}"'

print(episode_body)
